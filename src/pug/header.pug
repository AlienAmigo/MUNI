header.page-header
  .page-header__wrapper
    a.page-header__logo(href=`${siteRoot}`)
      img.page-header__logo-image(src="img/Logo.svg" alt="MUNI лого")

    nav.main-nav.main-nav--reverse.main-nav--closed.main-nav--nojs
      ul.main-nav__list
        li.main-nav__list-item.main-nav__list-item--active
          a(href=`${routes.root}`) Главная
        li.main-nav__list-item
          a(href=`${routes.catalog}`) Каталог
        li.main-nav__list-item
          a(href=`${routes.poligraph}`) Свадебная полиграфия

    .page-header__contacts
      a.page-header__phone(href="tel:+79992077407")
        <span class="hide-mobile">8&ensp;</span>999&ensp;207&ensp;74&ensp;07
      </a>
      <a href="https://instagram.com/munidecor " class="page-header__instagram" title="MUNI в Instagram">
        <span class="visually-hidden">MUNI в Instagram</span>
        <svg width="12" height="12">
          <use xlink:href="#icon-instagram"></use>
        </svg>
      </a>

    a.btn.btn--reverse.page-header__order(href=`${routes.order}`) Мой заказ

    <button class="page-header__nav-toggle page-header__nav-toggle--closed page-header__nav-toggle--nojs" type="button">
      <span class="visually-hidden">Открыть меню</span>
    </button>
