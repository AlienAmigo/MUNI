//- Стандартный шаблон страницы
include data.pug
include mixins.pug
include blocks/breadcrumbs.pug

doctype html
html(class='page  no-js', lang='ru')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name="format-detection", content="telephone=no")
    link(rel="apple-touch-icon", sizes="180x180", href="img/favicon/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="img/favicon/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="img/favicon/favicon-16x16.png")
    link(rel="manifest", href="img/favicon/site.webmanifest")
    link(rel="mask-icon", href="img/favicon/safari-pinned-tab.svg", color="#5bbad5")
    meta(name="msapplication-TileColor", content="#ffffff")
    meta(name="theme-color", content="#ffffff")
    link(rel="preload", href="fonts/subset-Montserrat-Regular.woff2", as="font" crossorigin="anonymous")
    link(rel="preload" href="fonts/subset-Cormorant-Bold.woff2" as="font" crossorigin="anonymous")
    link(rel="preload" href="fonts/subset-Roboto-Regular.woff2" as="font" crossorigin="anonymous")
    link(rel="stylesheet" href="css/style.css")
    block meta
      title #{myPageTitle}

    block head
      script.
        document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

  body
    noscript У вас отключен JavaScript. Это пугает.

    include blocks/header.pug

    block breadcrumbs

    main.page-main
      block main

    include blocks/footer.pug

    .popup
      .popup-body
        .popup-close
        .popup-inner

  script(src='js/vendors.min.js' defer)
  script(src='js/script.min.js' defer)
